@model Supplier

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<a asp-action="Index" asp-controller="Supplier">List</a>
<form asp-action="Edit" asp-controller="Supplier"
                        asp-route-id="@Model.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input  asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <select asp-for="Gender" 
                asp-items="@Html.GetEnumSelectList<Gender>()"
                class="custom-select">
            <option value="">Select Gender</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="row">
            <input type="hidden" asp-for="Address!.Id" />
            <input type="hidden" asp-for="Address!.SupplierRefId" />
            <div class="col-sm-2">
                <label asp-for="Address!.City"></label>
                <input asp-for="Address!.City" class="form-control" />
            </div>
            <div class="col-sm-2">
                <label asp-for="Address!.ProvinceName"></label>
                <input asp-for="Address!.ProvinceName" class="form-control" />
            </div>
            <div class="col-sm-2">
                <label asp-for="Address!.DistrictName"></label>
                <input asp-for="Address!.DistrictName" class="form-control" />
            </div>
            <div class="col-sm-3">
                <label asp-for="Address!.CommuneName"></label>
                <input asp-for="Address!.CommuneName" class="form-control" />
            </div>
            <div class="col-sm-3">
                <label asp-for="Address!.Village"></label>
                <input asp-for="Address!.Village" class="form-control" />
            </div>
    </div>
    <div class="mt-2">
        <input type="submit" value="Save Changed" class="btn btn-primary" />
    </div>


</form>